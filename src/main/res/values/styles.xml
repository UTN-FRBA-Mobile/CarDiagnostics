<resources>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="@style/Theme.AppCompat.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <item name="android:actionBarStyle">@style/CustomActionBar</item>
        <item name="android:popupMenuStyle">@style/CustomPopupMenu</item>

    </style>

    <style name="CustomActionBar" parent="android:Widget.ActionBar">
        <item name="android:background">@color/text_color_black</item>
        <item name="android:titleTextStyle">@style/CustomTitle</item>

    </style>

    <style name="CustomTitle" parent="android:TextAppearance">
        <item name="android:textColor">@color/text_color_white</item>
    </style>

    <style name="CustomPopupMenu" parent="@android:style/Widget.Holo.ListPopupWindow">
        <item name="android:popupBackground">@color/black</item>
        <item name="android:textColor">@color/text_color_white</item>
    </style>
</resources>

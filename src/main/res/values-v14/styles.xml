<resources>

    <!--
        Base application theme for API 14+. This theme completely replaces
        AppBaseTheme from BOTH res/values/styles.xml and
        res/values-v11/styles.xml on API 14+ devices.
    -->
    <style name="AppBaseTheme" parent="@style/Theme.AppCompat.Light.DarkActionBar">
        <!-- API 14 theme customizations can go here. -->
    </style>

    <style name="AppTheme" parent="AppBaseTheme">
        <item name="android:actionBarStyle">@style/CustomActionBar</item>
        <item name="android:popupMenuStyle">@style/CustomActionBar</item>
        <item name="android:itemTextAppearance">@style/CustomMenuItem</item>

    </style>

    <style name="CustomActionBar" parent="android:Widget.ActionBar">
        <item name="android:background">@color/text_color_black</item>
        <item name="android:titleTextStyle">@style/CustomTitle</item>

    </style>

    <style name="CustomTitle" parent="android:TextAppearance">
        <item name="android:textColor">@color/text_color_white</item>
    </style>

    <style name="CustomMenuItem" parent="@android:style/TextAppearance">
        <item name="android:popupBackground">@color/black</item>
        <item name="android:textColor">@color/text_color_white</item>
    </style>

</resources>

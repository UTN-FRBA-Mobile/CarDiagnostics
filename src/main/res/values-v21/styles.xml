<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppBaseTheme" parent="@style/Theme.AppCompat.Light.DarkActionBar">

        <!--    color for the app bar -->
        <item name="android:colorPrimary">@color/black</item>
        <!--   darker variant for the status bar and contextual app bars -->
        <item name="android:colorPrimaryDark">@color/black</item>
        <!--   theme UI controls like checkboxes and text fields -->
        <item name="android:colorAccent">@color/accent</item>

    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <item name="android:actionBarStyle">@style/CustomActionBar</item>
        <item name="android:popupMenuStyle">@style/CustomPopupMenu</item>
        <item name="android:itemTextAppearance">@style/CustomMenuItem</item>
        <item name="android:itemBackground">@color/black</item>
    </style>

    <style name="CustomActionBar" parent="android:Widget.ActionBar">
        <item name="android:background">@color/black</item>
        <item name="android:titleTextStyle">@style/CustomTitle</item>

    </style>

    <style name="CustomTitle" parent="android:TextAppearance">
        <item name="android:textColor">@color/text_color_white</item>
    </style>

    <style name="CustomMenuItem" parent="@android:style/TextAppearance">
        <item name="android:popupBackground">@color/black</item>
        <item name="android:textColor">@color/text_color_white</item>
    </style>

  </resources>
